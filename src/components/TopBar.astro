---
import { Image } from "astro:assets";
import PrimaryButton from "./PrimaryButton.astro";
import NavMenu from "./NavMenu.astro";
import OngTbLogo from "./OngTbLogo.astro";
import bottomEdge from "../assets/icons/topBarBottomEdge.svg";
import MobileNavMenu from "./MobileNavMenu";
---

<header class="flex flex-col p-2 relative">
  <div class="flex flex-row items-center justify-evenly">
    <OngTbLogo />
    <div class="flex flex-row gap-4 items-center sm:max-md:hidden">
      <NavMenu />
      <PrimaryButton>Quero adotar</PrimaryButton>
    </div>
    <div class="md:max-2xl:hidden">
      <MobileNavMenu client:load />
    </div>
  </div>
  <div
    class="absolute inset-x-0 -bottom-8 -space-y-7 overflow-hidden"
  >
    <Image
      src={bottomEdge}
      alt={"Borda da barra principal"}
      class={"z-50 min-w-[45rem] w-[45rem]"}
    />
    <Image
      src={bottomEdge}
      height={40}
      alt={"Borda da barra principal"}
      class={"opacity-55 z-40 min-w-[45rem] w-[45rem]"}
    />
  </div>
</header>
