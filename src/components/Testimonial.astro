---
import type { CustomerTestimonial as CustomerTestimonialModel } from "../types/customer-testimonial";
import CustomerTestimonial from "./CustomerTestimonial.astro";
import person1 from "../assets/images/person1.jpg";
import person2 from "../assets/images/person2.jpg";
import quoteIcon from "../assets/icons/quote.svg";
import { Image } from "astro:assets";

const customer1Testimonial: CustomerTestimonialModel = {
  name: "Laura",
  role: "Tutora da Paçoca",
  testimonial:
    "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec pharetra tellus ut erat consequat auctor integer nulla nunc.",
};
const customer2Testimonial: CustomerTestimonialModel = {
  name: "Rômulo",
