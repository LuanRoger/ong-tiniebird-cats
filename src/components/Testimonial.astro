  testimonial:
    "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec pharetra tellus ut erat consequat auctor integer nulla nunc.",
};
---

<div class="relative">
  <Image
    src={quoteIcon}
    width={300}
    height={300}
    alt={"Icone de citação"}
    class={"absolute"}
  />
  <div class="flex flex-row sm:max-md:flex-col sm:max-md:gap-16 items-center justify-between p-4">
    <div class="flex flex-col text-[#1A1442]">
      <h1 class="font-logo text-2xl">Depoimentos</h1>
      <p class="text-sm">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec pharetra
        tellus ut erat consequat auctor integer nulla nunc.
      </p>
    </div>
    <div class="flex flex-row sm:max-md:flex-col sm:max-md:gap-10 items-center">
      <CustomerTestimonial
        image={person1}
        alt="Pessoa abraçando um gato"
        testimonialInfo={customer1Testimonial}
      />
      <CustomerTestimonial
        image={person2}
        alt="Pessoa abraçando um gato"
        testimonialInfo={customer2Testimonial}
      />
    </div>
  </div>
