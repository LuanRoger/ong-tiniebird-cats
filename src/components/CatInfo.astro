---
import { Image } from "astro:assets";
import { type CatInfo } from "../types/cat-info";
import localizationIcon from "../assets/icons/localization.svg";
import GenreIcon from "./GenreIcon.astro";

interface Props {
  image: ImageMetadata;
  alt: string;
  catInfo: CatInfo;
}

const { image, alt, catInfo } = Astro.props;
const { name, genre, localization } = catInfo;
---

<div class="flex flex-col relative">
  <Image src={image} width={250} alt={alt} class={"object-contain"} />
  <div class="flex flex-row gap-1 justify-start items-start p-1">
    <GenreIcon genre={genre} class="absolute bottom-12 left-2" />
    <div class="flex flex-col gap-1 font-bold ml-14 text-white">
      <small>
        {name}
      </small>
      <small>
        {genre} / Filhote
      </small>
      <small class="flex flex-row gap-1">
        <Image
          src={localizationIcon}
          width={8}
          height={8}
          alt={"Icone de localização"}
        />
        {localization}
      </small>
    </div>
  </div>
</div>
