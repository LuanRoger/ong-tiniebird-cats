---
import { Image } from "astro:assets";
import CircleElement from "./CircleElement.astro";

interface Props {
  circleImage: ImageMetadata;
  circleImageAlt: string;
  year: string;
  descriptionImage: ImageMetadata;
  descriptionImageAlt: string;
  description: string;
}

const {
  circleImage,
  circleImageAlt,
  year,
  descriptionImage,
  descriptionImageAlt,
  description,
} = Astro.props;
---

<div class="flex flex-row items-center gap-2">
  <CircleElement>
    <Image src={circleImage} width={16} height={16} alt={circleImageAlt} />
  </CircleElement>
  <div class="flex flex-col">
    <h2 class="font-bold text-lg">{year}</h2>
    <span class="inline-flex gap-2 items-center">
      <Image
        src={descriptionImage}
        width={16}
        height={16}
        alt={descriptionImageAlt}
      />
      <p>{description}</p>
    </span>
  </div>
</div>
