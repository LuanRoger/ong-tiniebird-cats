---
import { Image } from "astro:assets";
import cat1 from "../assets/images/cat1.png";
import cat2 from "../assets/images/cat2.png";
import cat3 from "../assets/images/cat3.png";
import cat4 from "../assets/images/cat4.png";
import CatInfo from "./CatInfo.astro";
import type { CatInfo as CatModel } from "../types/cat-info";
import PrimaryButton from "./PrimaryButton.astro";

const catInfo1: CatModel = {
  name: "Bolinha",
  genre: "Fêmea",
  localization: "São Paulo - SP",
};
---

<div
  class="flex flex-col justify-stretch items-center gap-4 w-full bg-gradient-to-bl from-[#FF7B77] to-[#FFB0AD]"
>
  <div class="flex p-4">
    <h1 class="font-logo text-2xl text-white">Gatos para adoção</h1>
  </div>
  <div class="flex flex-row justify-evenly overflow-x-auto">
    <CatInfo image={cat1} alt="Gatinho bunitiho" catInfo={catInfo1} />
    <CatInfo image={cat2} alt="Gatinho bunitiho" catInfo={catInfo1} />
    <CatInfo image={cat3} alt="Gatinho bunitiho" catInfo={catInfo1} />
    <CatInfo image={cat4} alt="Gatinho bunitiho" catInfo={catInfo1} />
  </div>
  <div>
    <PrimaryButton> Ver todos </PrimaryButton>
  </div>
</div>
